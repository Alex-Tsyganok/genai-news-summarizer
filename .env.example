# OpenAI Configuration (REQUIRED - OpenAI embeddings are mandatory for this system)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo
# Supported OpenAI embedding models: text-embedding-ada-002, text-embedding-3-small, text-embedding-3-large
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# LangSmith Configuration (Optional)
#LANGCHAIN_API_KEY=your_langchain_api_key_here
#LANGCHAIN_PROJECT=genai-news-summarizer
#LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
#LANGCHAIN_TRACING_V2=true

# ChromaDB Configuration
CHROMADB_PERSIST_DIRECTORY=./data/chromadb
CHROMADB_COLLECTION_NAME=news_articles

# Extraction Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# AI Scoring Configuration
MIN_CONFIDENCE_SCORE=0.6
MIN_CONTENT_LENGTH=300

# Summarization Configuration
MAX_SUMMARY_LENGTH=200
MAX_TOPICS=5

# Search Configuration
DEFAULT_SEARCH_LIMIT=10
# Similarity threshold for OpenAI embeddings (0.7 is optimal for high-quality results)
SIMILARITY_THRESHOLD=0.7

# System Configuration
LOG_LEVEL=INFO
USE_FALLBACK_ONLY=false
